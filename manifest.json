{
  "manifest_version": 3,
  "name": "PlugClipboard",
  "version": "1.0.2",
  "description": "保存您在浏览器中复制的历史记录，最多20条。",
  "permissions": ["storage", "clipboardRead", "clipboardWrite", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "PlugClipboard"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
